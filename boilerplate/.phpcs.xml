<?xml version="1.0"?>
<ruleset name="{{ LABEL }}">

  <arg name="extensions" value="inc,info,install,md,module,php,profile,test,theme,txt,yml"/>

  <file>./public_html/themes/custom</file>
  <file>./public_html/modules/custom</file>

  <!-- Ignore third party code -->
  <exclude-pattern>*/node_modules/*</exclude-pattern>

  <rule ref="Drupal"/>
  <rule ref="DrupalPractice"/>

  <!-- Ignore t() usage in test classes -->
  <rule ref="DrupalPractice.Objects.GlobalFunction.GlobalFunction">
    <exclude-pattern>*/tests/src/*</exclude-pattern>
  </rule>

</ruleset>
