{
  "extends": [
    "plugin:vue/recommended",
    "../../../.eslintrc.json"
  ],
  "parserOptions": {
    "parser": "babel-eslint",
    "ecmaVersion": 2017
  },
  "rules": {
    "import/extensions": [
      2,
      "ignorePackages",
      {
        "vue": "never"
      }
    ],
    "import/no-extraneous-dependencies": [
      2,
      {
        "devDependencies": [
          "./build/*.js",
          "**/gulpfile.js",
          "**/postcss.config.js"
        ],
        "optionalDependencies": false
      }
    ],
    "//": "Throws false errors on variables named 'context'",
    "react/destructuring-assignment": 0,
    "//": "Cannot resolve Webpack aliases. Webpack will complain at compile time anyway.",
    "import/no-unresolved": 0
  },
  "settings": {
    "import/resolver": {
      "webpack": {
        "config": "./build/webpack.config.dev.js"
      }
    }
  }
}
