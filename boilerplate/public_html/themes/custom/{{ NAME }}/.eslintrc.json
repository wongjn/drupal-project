{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2017
  },
  "rules": {
    "import/no-extraneous-dependencies": [
      2,
      {
        "devDependencies": [
          "./build/*.js",
          "**/gulpfile.js/**/*.js",
          "**/postcss.config.js",
          "**/svelte.config.js"
        ],
        "optionalDependencies": false
      }
    ],
    "//": "Cannot resolve Webpack aliases. Webpack will complain at compile time anyway.",
    "import/no-unresolved": 0,
    "//": "False error reporting for Drupal.behavior context parameter.",
    "react/destructuring-assignment": 0,
    "valid-jsdoc": 0
  }
}
