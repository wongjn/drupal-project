{
    "name": "wongjn/drupal-project",
    "description": "Drupal 8 project managed with composer",
    "type": "project",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "wongjn",
            "role": "Developer"
        }
    ],
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/wongjn/frontend_router"
        },
        {
            "type": "vcs",
            "url": "https://github.com/wongjn/lazy_image"
        },
        {
            "type": "vcs",
            "url": "https://bitbucket.org/projectcosmic/remove_asset_hash"
        },
        {
            "type": "vcs",
            "url": "https://bitbucket.org/projectcosmic/ex_icons"
        },
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
    ],
    "require": {
        "composer/installers": "^1.2",
        "cweagans/composer-patches": "^1.6",
        "drupal-composer/drupal-scaffold": "^2.2",
        "drupal/admin_toolbar": "^1.21",
        "drupal/config_split": "^1.0",
        "drupal/core": "~8.5.1",
        "drupal/imce": "^1.5",
        "drupal/menu_admin_per_menu": "^1.0",
        "drupal/menu_trail_by_path": "^1.1",
        "drupal/pathauto": "^1.0@RC",
        "drush/drush": "^9.0.0",
        "projectcosmic/remove_asset_hash": "^0.1.0",
        "projectcosmic/ex_icons": "^1.0.0-beta2",
        "vlucas/phpdotenv": "^2.4",
        "webflo/drupal-finder": "^1.0.0",
        "webmozart/path-util": "^2.3",
        "wongjn/frontend_router": "^1.0",
        "wongjn/lazy_image": "^2.0"
    },
    "require-dev": {
        "drupal/console": "^1.0.2",
        "drupal/devel": "^1.0@RC",
        "webflo/drupal-core-require-dev": "~8.5.1"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "classmap": [
            "scripts/composer/ScriptHandler.php"
        ],
        "files": ["load.environment.php"]
    },
    "scripts": {
        "drupal-scaffold": "DrupalComposer\\DrupalScaffold\\Plugin::scaffold",
        "pre-install-cmd": [
            "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
        ],
        "pre-update-cmd": [
            "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
        ],
        "post-install-cmd": [
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ],
        "post-update-cmd": [
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ],
        "boilerplate": [
            "@php scripts/boilerplate.php"
        ]
    },
    "extra": {
        "installer-paths": {
            "public_html/core": ["type:drupal-core"],
            "public_html/libraries/{$name}": ["type:drupal-library"],
            "public_html/modules/contrib/{$name}": ["type:drupal-module"],
            "public_html/profiles/contrib/{$name}": ["type:drupal-profile"],
            "public_html/themes/contrib/{$name}": ["type:drupal-theme"],
            "drush/contrib/{$name}": ["type:drupal-drush"]
        },
        "patches": {
            "drupal/admin_toolbar": {
                "Remove drupal.org links in admin_toolbar_tools": "patches/remove-links-to-drupal-org.patch"
            },
            "drupal/pathauto": {
                "Fix alias is not generated when Pathauto widget is hidden": "https://www.drupal.org/files/issues/2018-04-09/pathauto_2946273-25.patch"
            }
        },
        "drupal-scaffold": {
            "excludes": [
                ".csslintrc",
                ".ht.router.php",
                "sites/development.services.yml",
                "sites/example.settings.local.php",
                "sites/example.sites.php",
                "web.config"
            ],
            "initial": {
                "sites/example.settings.local.php": "sites/default/settings.local.php"
            }
        }
    }
}
