{
    "name": "wongjn/drupal-project",
    "description": "Drupal 8 project managed with composer",
    "type": "project",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Justin Wong",
            "role": "Developer",
            "email": "justin@cosmic.org.uk",
            "homepage": "https://cosmic.org.uk"
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "https://cosmic.org.uk/composer"
        },
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        },
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
    ],
    "require": {
        "php": ">=7.1",
        "composer/installers": "^1.2",
        "cweagans/composer-patches": "^1.6.5",
        "drupal/admin_toolbar": "^2.0",
        "drupal/block_content_permissions": "^1.6",
        "drupal/core-composer-scaffold": "~8.8.0",
        "drupal/core-recommended": "~8.8.0",
        "drupal/file_browser": "^1.1",
        "drupal/imce": "^1.5",
        "drupal/menu_admin_per_menu": "^1.0",
        "drupal/menu_trail_by_path": "^1.1",
        "drupal/pathauto": "^1.5",
        "drupal/quicklink": "^1.1",
        "drupal/view_unpublished": "^1.0@alpha",
        "drush/drush": "^10.1",
        "npm-asset/dropzone": "^5.5",
        "npm-asset/imagesloaded": "^4.1",
        "npm-asset/masonry-layout": "^4.2",
        "oomphinc/composer-installers-extender": "^1.1",
        "projectcosmic/deny_tainted_urls": "^1.0",
        "projectcosmic/projectcosmic_file_browser": "^1.0",
        "projectcosmic/remove_asset_hash": "^0.1.0",
        "projectcosmic/ex_icons": "^2.0.0",
        "wongjn/lazy_image": "^1.3.0",
        "zaporylie/composer-drupal-optimizations": "^1.0"
    },
    "require-dev": {
        "dealerdirect/phpcodesniffer-composer-installer": "^0.6.2",
        "drupal/config_inspector": "^1.0@beta",
        "drupal/console": "^1.0.2",
        "drupal/core-dev": "~8.8.0",
        "drupal/devel": "^2.1",
        "drupal/multiline_config": "^1.0",
        "wongjn/site_builder_console": "^0.3.0"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "replace": {
        "npm-asset/jquery": "*",
        "paragonie/random_compat": "9.99.99"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "post-drupal-scaffold-cmd": [
            "patch -p0 < patches/htaccess.patch"
        ],
        "boilerplate": [
            "@php scripts/boilerplate.php"
        ]
    },
    "extra": {
        "composer-exit-on-patch-failure": true,
        "patchLevel": {
            "drupal/core": "-p2"
        },
        "installer-types": [
            "npm-asset"
        ],
        "installer-paths": {
            "public_html/core": ["type:drupal-core"],
            "public_html/libraries/masonry": ["npm-asset/masonry-layout"],
            "public_html/libraries/{$name}": ["type:drupal-library", "type:npm-asset"],
            "public_html/modules/contrib/{$name}": ["type:drupal-module"],
            "public_html/profiles/contrib/{$name}": ["type:drupal-profile"],
            "public_html/themes/contrib/{$name}": ["type:drupal-theme"],
            "drush/Commands/contrib/{$name}": ["type:drupal-drush"]
        },
        "patches": {
            "drupal/core": {
                "Introduce current page redirection on contact form submission": "https://www.drupal.org/files/issues/2018-09-10/contact-form-redirect-2636976-23.patch",
                "Fix drupalimage CKEditor plugin requiring data-entity-uuid and data-entity-type when image upload is disabled": "https://www.drupal.org/files/issues/2018-09-13/drupalimage_ckeditor-2771837-34.patch"
            },
            "drupal/devel": {
                "Fix menu link generation": "patches/devel_generate-fix_menu_link_generation.patch"
            }
        },
        "drupal-scaffold": {
            "locations": {
                "web-root": "./public_html"
            },
            "file-mapping": {
                "[web-root]/.ht.router.php": false,
                "[web-root]/sites/development.services.yml": false,
                "[web-root]/sites/example.settings.local.php": false,
                "[web-root]/sites/example.sites.php": false,
                "[web-root]/web.config": false
            }
        }
    }
}
