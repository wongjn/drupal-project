{
    "name": "wongjn/drupal-project",
    "description": "Drupal 8 project managed with composer",
    "type": "project",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Justin Wong",
            "role": "Developer",
            "email": "justin@cosmic.org.uk",
            "homepage": "https://cosmic.org.uk"
        }
    ],
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/wongjn/frontend_router"
        },
        {
            "type": "vcs",
            "url": "https://github.com/wongjn/lazy_image"
        },
        {
            "type": "vcs",
            "url": "https://bitbucket.org/projectcosmic/remove_asset_hash"
        },
        {
            "type": "vcs",
            "url": "https://bitbucket.org/projectcosmic/ex_icons"
        },
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        },
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
    ],
    "require": {
        "composer/installers": "^1.2",
        "cweagans/composer-patches": "^1.6.5",
        "drupal-composer/drupal-scaffold": "^2.5",
        "drupal/admin_toolbar": "^1.25",
        "drupal/config_split": "^1.0",
        "drupal/core": "~8.6.0",
        "drupal/file_browser": "^1.1",
        "drupal/imce": "^1.5",
        "drupal/menu_admin_per_menu": "^1.0",
        "drupal/menu_trail_by_path": "^1.1",
        "drupal/pathauto": "^1.3",
        "drush/drush": "^9.0.0",
        "npm-asset/dropzone": "^5.5",
        "npm-asset/imagesloaded": "^4.1",
        "npm-asset/masonry-layout": "^4.2",
        "oomphinc/composer-installers-extender": "^1.1",
        "projectcosmic/remove_asset_hash": "^0.1.0",
        "projectcosmic/ex_icons": "^1.0.0-beta2",
        "webflo/drupal-finder": "^1.0.0",
        "webmozart/path-util": "^2.3",
        "wongjn/frontend_router": "~1.1.0",
        "wongjn/lazy_image": "^1.3.0"
    },
    "require-dev": {
        "drupal/config_inspector": "^1.0@beta",
        "drupal/console": "^1.0.2",
        "drupal/devel": "^1.2",
        "webflo/drupal-core-require-dev": "~8.6.0"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "replace": {
        "npm-asset/jquery": "*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "classmap": [
            "scripts/composer/ScriptHandler.php"
        ]
    },
    "scripts": {
        "pre-install-cmd": [
            "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
        ],
        "pre-update-cmd": [
            "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
        ],
        "post-install-cmd": [
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ],
        "post-update-cmd": [
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ],
        "boilerplate": [
            "@php scripts/boilerplate.php"
        ]
    },
    "extra": {
        "patchLevel": {
            "drupal/core": "-p2"
        },
        "installer-types": [
            "npm-asset"
        ],
        "installer-paths": {
            "public_html/core": ["type:drupal-core"],
            "public_html/libraries/masonry": ["npm-asset/masonry-layout"],
            "public_html/libraries/{$name}": ["type:drupal-library", "type:npm-asset"],
            "public_html/modules/contrib/{$name}": ["type:drupal-module"],
            "public_html/profiles/contrib/{$name}": ["type:drupal-profile"],
            "public_html/themes/contrib/{$name}": ["type:drupal-theme"],
            "drush/Commands/{$name}": ["type:drupal-drush"]
        },
        "patches": {
            "drupal/core": {
                "Introduce current page redirection on contact form submission": "https://www.drupal.org/files/issues/2018-09-10/contact-form-redirect-2636976-23.patch",
                "Fix drupalimage CKEditor plugin requiring data-entity-uuid and data-entity-type when image upload is disabled": "https://www.drupal.org/files/issues/2018-09-13/drupalimage_ckeditor-2771837-34.patch"
            },
            "drupal/pathauto": {
                "Fix alias is not generated when Pathauto widget is hidden": "https://www.drupal.org/files/issues/2018-04-09/pathauto_2946273-25.patch"
            }
        },
        "drupal-scaffold": {
            "excludes": [
                ".csslintrc",
                ".ht.router.php",
                "sites/development.services.yml",
                "sites/example.settings.local.php",
                "sites/example.sites.php",
                "web.config"
            ],
            "initial": {
                ".editorconfig": "../.editorconfig",
                ".gitattributes": "../.gitattributes"
            }
        }
    }
}
